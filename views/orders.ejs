<main class="main">
  <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
    <div class="container">
      <h1 class="page-title">Orders<span>Shop</span></h1>
    </div><!-- End .container -->
  </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="#">Orders</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
      <div class="container">
  <table class="table table-wishlist table-mobile">
    <thead>
      <tr>
        <th>Ordered ID</th>
        <th>Ordered Name</th>
        <th >Price</th>
        <th>PaymentStatus</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% Orders.reverse().forEach((items)=>{ %> 
      <tr>
        <td class="price-col"><%= items.orders._id %> </td>

        <td class="price-col"><%= items.orders.firstname  %> </td>
        <td class="price-col"><%=  items.orders.totalPrice  %> </td>
        
        <% if(items.orders.paymentStatus==1){ %> 
        <td class="stock-col"><span class="in-stock">SUCCESS</span></td>
        <% }else{ %> 
          <td class="stock-col"><span class="out-of-stock">PENDING</span></td>
         <% } %> 
        <td class="action-col">
          <a href="/detailOrder/<%=items.orders._id  %>">
          <button class="btn btn-block btn-outline-primary-2"><i class="icon-arrows"></i>View More</button></a>

          <td  class="remove-col"><button class="btn-remove"><i class="icon-contract"></i></button></td>

        </td>
      </tr>
      <% }) %> 
    </tbody>
  </table><!-- End .table table-wishlist -->
        <div class="wishlist-share">
          <div class="social-icons social-icons-sm mb-2">
            <label class="social-label">Share on:</label>
        <a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
        <a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
        <a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
        <a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
        <a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
      </div><!-- End .soial-icons -->
        </div><!-- End .wishlist-share -->
      </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->