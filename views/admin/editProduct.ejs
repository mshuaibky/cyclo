<div class="col-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
           
            <form action="/admin/editProduct/<%- product._id  %> "  method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Name" value="<%- product.name %> " >
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Describtion</label>
                    <input type="text" name="description" class="form-control" placeholder="Discribtion" value="<%- product.description %> ">
                </div>
                <div class="form-group">
                    
                   
                        <label for="exampleInputName1">catagory</label>
                        <select class="form-control" name="catagory" id="exampleSelectGender">
                            <% catagory.forEach((catagory)=>{ %> 
                            <option value="<%= catagory.name %> "><%= catagory.name %> </option>
                            <% }) %> 
                        </select>
                       
                    
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Price</label>
                    <input type="text" name="price" class="form-control" placeholder="price" value="<%- product.price %> ">
                </div>
                <div class="form-group">
                    <div class="form-group">
                
                
                        <img id="imageview" style="border-radius: 0px!important;width: 102px!important;height: 85px!important;" src=/productimages/<%= product._id %>.jpg alt="image">
                
                    </div>
                    <label>File upload</label>
                    <input type="file" name="Image" class="form-control" onchange="viewimage(event)" >
                   
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>


<script>

    function viewimage(event){
        document.getElementById('imageview').src=URL.createObjectURL(event.target.files[0])
    }
</script>


