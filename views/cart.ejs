<section>
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <% if(totalAmount){%> 
            
       
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="#">Shopping Cart</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->
        

        <div class="page-content">
            <div class="cart">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9">
                            <table class="table table-cart table-mobile">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                               

                                <tbody>
                                   <% cartproducts.forEach((cartproducts)=>{%> 
                                    <tr>
                                        <td class="product-col">
                                            <div class="product">
                                                <figure class="product-media">
                                                    <a href="#">
                                                        <img src="/productimages/<%= cartproducts.item%>0.jpg " alt="Product image">
                                                    </a>
                                                </figure>

                                                <h3 class="product-title">
                                                    <a href="#"><%= cartproducts.product?.name%> </a>
                                                </h3><!-- End .product-title -->
                                            </div><!-- End .product -->
                                        </td>
                                        <td class="price-col"><%= cartproducts.product?.price%> </td>
                                        <td class="quantity-col">
                                            <div class="cart-product-quantity">
                                                <!-- <div class="col"> -->
                                               <button class="btn-minus" <% if(cartproducts.quantity<2){ %> disabled <% } %>   onclick="changeQuantity('<%= cartproducts._id%>','<%=cartproducts.product?._id%>',-1,this.parentElement.querySelector('input'),'<%= cartproducts.product?.price%>')" style="border:0 ;border-radius:20px ;">-</button>
                                               <input   class="text-center" style="width:30px ; border-radius: 5px;" type="text" value="<%= cartproducts.quantity %>"> </input>
                                                <button class="plus"  onclick="changeQuantity('<%= cartproducts._id%>','<%=cartproducts.product?._id%>',1,this.parentElement.querySelector('input'),'<%= cartproducts.product?.price%>')"style="border: 0;border-radius:20px ;">+</button>
                                            <!-- </div> -->
                                            </div><!-- End .cart-product-quantity -->
                                        </td>
                                        <td id="total" class="total-col"><%=cartproducts.product?.price*cartproducts.quantity %></td>
                                        <td class="remove-col"><button onclick="remove('<%=cartproducts._id%>','<%=cartproducts.product?._id%>')" class="btn-remove"><i class="icon-close"></i></button></td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table><!-- End .table table-wishlist -->

                            <div class="cart-bottom">
                                <div class="cart-discount">
                                    <form action="#">
                                        <div class="input-group">
                                            <input type="text" class="form-control" required placeholder="coupon code">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-primary-2" type="submit"><i class="icon-long-arrow-right"></i></button>
                                            </div><!-- .End .input-group-append -->
                                        </div><!-- End .input-group -->
                                    </form>
                                </div><!-- End .cart-discount -->

                                <a href="#" class="btn btn-outline-dark-2"><span>UPDATE CART</span><i class="icon-refresh"></i></a>
                            </div><!-- End .cart-bottom -->
                        </div><!-- End .col-lg-9 -->
                        <aside class="col-lg-3">
                      
                            <div class="summary summary-cart">
                                <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                                <table class="table table-summary">
                                    <tbody>
                                        <tr class="summary-subtotal">
                                            <td>Subtotal:</td>
                                            <td id="subtotal">RS <%= totalAmount %> </td>
                                        </tr><!-- End .summary-subtotal -->
                                        

                                       
                                    </tbody>
                                </table><!-- End .table table-summary -->
                                <a href="/checkout" class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO CHECKOUT</a>
                            </div><!-- End .summary -->
                        

                        </aside><!-- End .col-lg-3 -->
                    </div><!-- End .row -->
                </div><!-- End .container -->
            </div><!-- End .cart -->
        </div><!-- End .page-content -->
        <% }else{ %> 
            <h1>YOUR CART IS EMPTY</h1>
            <% } %> 
    </main><!-- End .main -->
</section>

<script>

    function changeQuantity(cartId,proId,count,input,price,userId){

        
        let quantity=parseInt(input.value)
       
        count=parseInt(count)
        $.ajax({
            url:'/changeProductQuantity',
            data:{
                cart:cartId,
                product:proId,
                count:count,
                userid:userId,
                quantity:quantity
            },
            method:'post',
            success:(response)=>{
               
               if(response.removeProduct){
               alert('product removed')
               location.reload()
               }else{
                input.value=quantity+count
               }
               let value=$('#cart').html()
               if(count>0){

                   value=parseInt(value)+1
            }
            else{
                value=parseInt(value)-1
            }
            $("#cart").html(value)
           
                let btn=input.parentElement.querySelector('button.btn-minus')
                if(input.value<2){
                    btn.setAttribute('disabled','')
                }else{
                    btn.removeAttribute('disabled')
                }

                document.getElementById('subtotal').innerText='RS '+response.total

                let total=parseInt(input.value)*price
                input.parentElement.parentElement.parentElement.querySelector('td.total-col').innerText=total
            },
            
        })
    }
   function remove(cartsId,productsId){
   
    $.ajax({
        url:'/deleteCartProduct',
        data:{
        cartid:cartsId,
        productid:productsId,
        },
  method:'post',
  beforeSend:()=>{
    return confirm('do you want to remove this product?')
  },
  success:(response)=>{
   
    location.reload()
  }
    })

    
   } 

</script>